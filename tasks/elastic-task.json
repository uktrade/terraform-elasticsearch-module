[
  {
    "name": "elasticsearch",
    "image": "${image}",
    "essential": true,
    "cpu": ${cpu},
    "memory": ${memory},
    "portMappings": [
      {
        "containerPort": 9200,
        "hostPort": 9200
      },
      {
        "containerPort": 9300,
        "hostPort": 9300
      }
    ],
    "ulimits": [
      {
        "name": "nofile",
        "softLimit": 65536,
        "hardLimit": 65536
      },
      {
        "name": "memlock",
        "softLimit": -1,
        "hardLimit": -1
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "data",
        "containerPath": "/usr/share/elasticsearch/data"
      }
    ],
    "environment": [
      {
        "name": "cluster.name",
        "value": "${cluster_name}"
      },
      {
        "name": "SYSTEM_KEY",
        "value": "${system_key}"
      },
      {
        "name": "ES_SSL_KEY",
        "value": "${es_ssl_key}"
      },
      {
        "name": "ES_SSL_CERT",
        "value": "${es_ssl_cert}"
      },
      {
        "name": "ES_SSL_CA",
        "value": "${es_ssl_ca}"
      },
      {
        "name": "SAML_KEY",
        "value": "${saml_key}"
      },
      {
        "name": "SAML_CERT",
        "value": "${saml_cert}"
      },
      {
        "name": "CLUSTER_SECURITY_GROUP",
        "value": "${cluster_security_group}"
      },
      {
        "name": "ES_JAVA_OPTS",
        "value": "-Xms8g -Xmx8g"
      },
      {
        "name": "ELASTIC_PASSWORD",
        "value": "${elastic_password}"
      },
      {
        "name": "logger.discovery",
        "value": "DEBUG"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${stream_prefix}"
      }
    }
  }
]
